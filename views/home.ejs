<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <%- include('navbar') %>
    <!-- <%= JSON.stringify(data) %> -->
    <div class="container">
        <h1>Transaction</h1>
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Amount</th>
                <th scope="col">Type</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach((el,i) => { %>
                    <tr>
                      <td><%= i + 1 %></td>
                      <td><%= el.title %></td>
                      <td><%= el.amount %></td>
                      <td><%= el.type %></td>
                      <td>
                        <a class="btn btn-outline-warning" href="">Edit</a>
                        <a class="btn btn-outline-danger" href="">Delete</a>
                      </td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
    </div>
    <%- include('scripts') %>
</body>
</html>