<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Transaksi - Budgetin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-5">
        <h2><i class="fas fa-plus me-2"></i> Tambah Transaksi</h2>
        <form action="/transaction/add" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <% if (errors && errors.title) { %>
                    <div class="alert alert-danger" role="alert"><%= errors.title %></div>
                <% } %>
                <input type="text" class="form-control <%= errors && errors.title ? 'is-invalid' : '' %>" id="title" name="title">
            </div>
            <div class="mb-3">
                <label for="amount" class="form-label">Amount</label>
                <% if (errors && errors.amount) { %>
                    <div class="alert alert-danger" role="alert"><%= errors.amount %></div>
                <% } %>
                <input type="number" step="0.01" class="form-control <%= errors && errors.amount ? 'is-invalid' : '' %>" id="amount" name="amount">
            </div>
            <div class="mb-3">
                <label for="type" class="form-label">Type</label>
                <% if (errors && errors.type) { %>
                    <div class="alert alert-danger" role="alert"><%= errors.type %></div>
                <% } %>
                <select name="type" id="type" class="form-select <%= errors && errors.type ? 'is-invalid' : '' %>">
                    <option value="" disabled selected>Choose...</option>
                    <option value="income">Income</option>
                    <option value="expense">Expense</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <% if (errors && errors.date) { %>
                    <div class="alert alert-danger" role="alert"><%= errors.date %></div>
                <% } %>
                <input name="date" type="date" class="form-control <%= errors && errors.date ? 'is-invalid' : '' %>" id="date">
            </div>
            <div class="mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                <% if (errors && errors.CategoryId) { %>
                    <div class="alert alert-danger" role="alert"><%= errors.CategoryId %></div>
                <% } %>
                <select name="CategoryId" id="CategoryId" class="form-select <%= errors && errors.CategoryId ? 'is-invalid' : '' %>">
                    <option value="" disabled selected>Choose...</option>
                    <% category.forEach(el => { %>
                        <option value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                </select>
            </div>
            <% if (errors && errors.general) { %>
                <div class="alert alert-danger" role="alert"><%= errors.general %></div>
            <% } %>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <%- include('partials/scripts') %>
</body>
</html>